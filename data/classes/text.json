{
  _: 'entity',
  sprite: "fonts:small:0",
  ss: [],
  P: 0,
  text: "",
  n: "",
  onConception: function(_, text) {
    _.text = text;
    _.ss.push(_.sprite);
    _.set(text);
  },
  set: function(text) {
    var _ = this;
    var t = text.split('');
    console.log(t.length + ' vs ' + (_.ss.length));
    var i = 0;
    for (i in t) {
      if (_.ss[i]) {
        _.ss[i].set = (t[i].charCodeAt(0)-32);
        _.ss[i].x = i*5;
      } else {
        var s = createSprite("fonts:small:"+(t[i].charCodeAt(0)-32), i*5, 0, 2);
        _.ss.push(s);
        s.attach(_.ss[0]);
      }
    }
    for (i = i; i < _.ss.length-1; i++) {
      _.ss[i].detach(_.sprite);
      _.ss.splice(i, 1);
    }
  }
}
