{
  _: 'entity',
  S: "fonts:small:0",
  ss: [],
  P: 0,
  n: "",
  onConception: function(_, n) {
    _.n = n;
    _.ss.push(_.S);
    _.set(n);
  },
  set: function(n) {
    var _ = this;
    var t = n.split('');
    var i = 0;
    for (i in t) {
      if (_.ss[i]) {
        _.ss[i].S = (t[i].charCodeAt(0)-32);
        _.ss[i].x = i*5;
      } else {
        var s = createSprite("fonts:small:"+(t[i].charCodeAt(0)-32), i*5, 0, 2);
        _.ss.push(s);
        s.attach(_.ss[0]);
      }
    }
    for (i = i; i < _.ss.length-1; i++) {
      _.ss[i].detach(_.sprite);
      _.ss.splice(i, 1);
    }
  }
}
