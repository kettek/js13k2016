{
  _: 'entity',
  name: "Birb",
  sprite: "birb:birb:run",
  sprites: [],
  onConception: function(_) {
    var t = createObject("text", "$!#%");
    t.attach(this);
  },
  onBirth: function(_) {
  },
  is_walking: 0,
  speed: 2,
  falling: 0,
  onThink: function(_) {
    if (keys[37]) {
      _.v.x -= _.speed;
      _.sprite.flip = true;
      _.sprite.animate = true;
    } else if (keys[39]) {
      _.v.x += _.speed;
      _.sprite.flip = false;
      _.sprite.animate = true;
    }
    if (keys[38] && !_.falling) {
      _.v.y -= _.speed*4;
    }
    if (Math.abs(_.v.x) <= 0.2) {
      _.sprite.animate = false;
    }
    if (Math.abs(_.v.y) != 0) {
      _.falling = 1;
    } else {
      _.falling = 0;
    }
  }
}
